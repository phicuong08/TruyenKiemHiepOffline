<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.IAPTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Widget" />
    <style name="MyAnimation" />
    <style name="MyAnimation.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_right_out</item>
    </style>
    <style name="busy" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="FullScreen" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>
    <style name="ButtonText">
        <item name="android:textSize">26.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="GQTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
        <item name="android:actionBarStyle">@style/Widget.GQTheme.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.GQTheme.ActionBar</item>
        <item name="homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_light</item>
    </style><style name="Widget.GQTheme.ActionBar" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:titleTextStyle">@style/GQTheme.ActionBar.Title.Style</item>
        <item name="android:subtitleTextStyle">@style/GQTheme.ActionBar.SubTitle.Style</item>
        <item name="titleTextStyle">@style/GQTheme.ActionBar.Title.Style</item>
        <item name="subtitleTextStyle">@style/GQTheme.ActionBar.SubTitle.Style</item>
    </style>
    <style name="GQTheme.ActionBar.Title.Style" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffff5f00</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="GQTheme.ActionBar.SubTitle.Style" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle.Inverse">
        <item name="android:textSize">9.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffa68800</item>
    </style>
</resources>
